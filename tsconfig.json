{
    "compilerOptions": {
        "lib": [
            "DOM",
            "ES2020",
            "ES2021"
        ],
        "outDir": "./dist",
        "removeComments": true,
        "target": "ES5",
        "module": "CommonJS",
        "baseUrl": "./",
        "esModuleInterop": true,
        "moduleResolution": "Node",
        "resolveJsonModule": true,
        "strictNullChecks": false,
        "sourceMap": true,
        "sourceRoot": "/",
        "alwaysStrict": true,
        "allowUnreachableCode": false,
        "noImplicitAny": true,
        "strict": true,

        "downlevelIteration": true,
        "experimentalDecorators": true,

        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noUncheckedIndexedAccess": true,
        "jsx": "react",
        "paths": {
            "misc/*": [ "./package/misc/*" ],
            "misc": [ "./package/misc/index.ts" ],
            "utils/*": [ "./package/utils/*" ],
            "utils": [ "./package/utils/index.ts" ],
            "types/*": [ "./package/types/*" ],
            "types": [ "./package/types/index.ts" ],
            "connector-utils": [ "./package/connector-utils/index.ts" ]
        },
        "typeRoots": [
            "./package/types"
        ]
    },

    "include": [
        "./sandbox/**/*"
    ],

    "exclude": [
        "./node_modules/**/*",
        "./package/**/*",
        "*.config.*s",
        "*.package.*s"
    ]
}
